<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.Sherlock.Light">
    	<item name="actionButtonStyle">@style/Widget.AppTheme.ActionButton</item>
    	<item name="android:actionButtonStyle" tools:ignore="NewApi">@style/Widget.AppTheme.ActionButton</item>
    	
    	<!--  action bar & tab -->
    	<item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
    	<item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.AppTheme.ActionBar</item>
    	
    	<item name="actionBarTabStyle">@style/Widget.AppTheme.TabView</item>
    	<item name="android:actionBarTabStyle" tools:ignore="NewApi">@style/Widget.AppTheme.TabView</item>
    	
    	<item name="actionBarTabBarStyle">@style/Widget.AppTheme.TabBar</item>
    	<item name="android:actionBarTabBarStyle" tools:ignore="NewApi">@style/Widget.AppTheme.TabBar</item>
	</style>
	
	<style name="Widget.AppTheme.ActionButton" parent="Widget.Sherlock.ActionButton">
    	<item name="android:minWidth">46dp</item>
    	<item name="android:padding">0dp</item>
	</style>
	
	<style name="Widget.AppTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
	    <item name="android:background">@drawable/action_bar_background</item>
	    <item name="background">@drawable/action_bar_background</item>
	    <item name="android:height">46dip</item>
	</style>
	
	<style name="Widget.AppTheme.TabBar" parent="Widget.Sherlock.Light.ActionBar.TabBar">
   		<item name="android:height">26dip</item>
  	</style>
  
	<style name="Widget.AppTheme.TabView" parent="Widget.Sherlock.ActionBar.TabView">
	    <!-- Tab text -->
	    <item name="android:minWidth">80dp</item>
	    <item name="android:height">25dip</item>
	    <item name="android:textSize">15sp</item>
	         
	    <!--  Lines under tabs
	    <item name="background">#ffffff</item>
   		<item name="android:background">#ffffff</item>
   		 -->
	</style>

</resources>